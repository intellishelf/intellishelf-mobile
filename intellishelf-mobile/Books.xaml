<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Intellishelf.Books">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Sorting Controls -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="10">
            <Picker Title="Order By" 
                    Grid.Column="0"
                    ItemsSource="{Binding OrderOptions}"
                    SelectedItem="{Binding SelectedOrder}"
                    Margin="0,0,10,0">
                <Picker.ItemDisplayBinding>
                    <Binding />
                </Picker.ItemDisplayBinding>
            </Picker>
            
            <HorizontalStackLayout Grid.Column="1" Spacing="5">
                <Label Text="Ascending" VerticalOptions="Center" />
                <CheckBox IsChecked="{Binding IsAscending}" />
            </HorizontalStackLayout>
        </Grid>
        
        <!-- Status Information -->
        <HorizontalStackLayout Grid.Row="1" Margin="10,0,10,5" Spacing="10">
            <Label Text="{Binding CurrentPage, StringFormat='Page {0}'}" />
            <Label Text="of" />
            <Label Text="{Binding TotalPages}" />
        </HorizontalStackLayout>

        <RefreshView Grid.Row="2"
                     x:Name="BooksRefreshView"
                     Refreshing="OnRefreshing"
                     Command="{Binding RefreshCommand}"
                     >
            <CollectionView x:Name="BooksCollection"
                           ItemsSource="{Binding Books}"
                           RemainingItemsThreshold="5"
                           RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="20"
                               Padding="10">
                            <Grid ColumnDefinitions="Auto,*" Margin="10">
                                <Image HeightRequest="150"
                                       WidthRequest="150"
                                       Aspect="AspectFit"
                                       Source="{Binding CoverImageSource}" />
                                <VerticalStackLayout Grid.Column="1" 
                                                   Padding="10,0">
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding Authors}"
                                           FontSize="14"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.Footer>
                    <Grid Padding="10">
                        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                         IsVisible="{Binding IsBusy}"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         HeightRequest="50"
                                         WidthRequest="50" />
                    </Grid>
                </CollectionView.Footer>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>