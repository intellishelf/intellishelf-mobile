<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Intellishelf.ViewModels"
             xmlns:books="clr-namespace:Intellishelf.Models.Books"
             x:Class="Intellishelf.Pages.Books"
             x:DataType="viewmodels:BooksViewModel"
             Title="Books">

    <Grid RowDefinitions="Auto,*">
        <!-- Sorting Controls -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="10">
            <Picker Title="Order By"
                    Grid.Column="0"
                    ItemsSource="{Binding OrderOptions}"
                    SelectedItem="{Binding SelectedOrder}"
                    Margin="0,0,10,0" />

            <HorizontalStackLayout Grid.Column="1" Spacing="5">
                <Label Text="Ascending" VerticalOptions="Center" />
                <CheckBox IsChecked="{Binding IsAscending}" />
            </HorizontalStackLayout>
        </Grid>

        <!-- Refresh + List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Books}"
                           RemainingItemsThreshold="5"
                           RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="books:Book">
                        <Border Margin="20" Padding="10">
                            <Grid ColumnDefinitions="Auto,*" Margin="10">
                                <!-- Cover Image -->
                                <Image HeightRequest="150"
                                       WidthRequest="150"
                                       Aspect="AspectFit"
                                       Source="{Binding CoverImageUrl}" />

                                <!-- Book Details -->
                                <VerticalStackLayout Grid.Column="1" Padding="10,0">
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding Authors}"
                                           FontSize="14"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Load More indicator -->
                <CollectionView.Footer>
                    <Grid Padding="10" IsVisible="{Binding IsBusy}">
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           HeightRequest="40"
                                           WidthRequest="40" />
                        <Label Text="Loading more books..."
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Margin="0,45,0,0"
                               FontSize="12"
                               TextColor="Gray" />
                    </Grid>
                </CollectionView.Footer>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>