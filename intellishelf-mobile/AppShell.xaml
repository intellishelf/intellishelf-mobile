<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Intellishelf.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Intellishelf"
    FlyoutBehavior="Disabled"
    Title="Intellishelf">

    <ShellContent Title="Login" Route="Login" ContentTemplate="{DataTemplate local:Login}" />

    <TabBar>
        <ShellContent Title="Books" Route="Books" ContentTemplate="{DataTemplate local:Books}" />
        <ShellContent Title="Add" Route="AddBook" ContentTemplate="{DataTemplate local:AddBook}" />
    </TabBar>

</Shell>